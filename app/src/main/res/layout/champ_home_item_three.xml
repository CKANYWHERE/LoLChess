<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingTop="@dimen/margin_medium"
    android:paddingBottom="@dimen/margin_medium"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">


    <ImageView
        android:id="@+id/imgCost"
        android:layout_width="10dp"
        android:layout_height="134dp"
        android:layout_weight="1"
        android:background="@color/cost2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgMain"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ahri" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgFirstSyn"
                        android:layout_width="wrap_content"

                        android:layout_height="22dp"
                        app:srcCompat="@drawable/trait_icon_starguardian" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <ImageView
                        android:id="@+id/imgSecondSyn"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        app:srcCompat="@drawable/trait_icon_sorcerer" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <ImageView
                        android:id="@+id/imgThirdSyn"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        app:srcCompat="@drawable/assassin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtFirstSyn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="별 수호자"
                        android:textSize="17dp" />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <TextView
                        android:id="@+id/txtSecondSyn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="마법사"
                        android:textSize="17dp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <TextView
                        android:id="@+id/txtThirdSyn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="용병"
                        android:textSize="17dp" />

                </LinearLayout>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />


            <TextView
                android:id="@+id/txtMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="아리"
                android:textColor="@color/colorTxt"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
